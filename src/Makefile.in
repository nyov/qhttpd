prefix		= @prefix@

## Compiler arguments
CC	= @CC@
CFLAGS	= @CFLAGS@
CPPFLAGS= @CPPFLAGS@
LDFLAGS = @LDFLAGS@
LIBS	= @LIBS@
OBJS	= main.o version.o config.o daemon.o child.o pool.o mime.o \
	  http_main.o http_request.o http_response.o http_header.o http_auth.o http_method.o http_method_dav.o http_status.o http_accesslog.o \
	  stream.o util.o syscall.o @OPT_OBJS@

## Make Library
all:	qhttpd

qhttpd: ${OBJS}
	${CC} ${CFLAGS} ${CPPFLAGS} ${OBJS} ${LDFLAGS} ${LIBS} -o qhttpd
	install -m 0755 qhttpd ../sbin/

reall: clean all

install: all
	install -m 0755 qhttpd ../sbin/qhttpd

## Compile Module
.SUFFIXES: .c .cpp .o

.c.o:
	${CC} ${CFLAGS} ${CPPFLAGS} -c -o $@ $<

.cpp.o:
	${CC} ${CFLAGS} ${CPPFLAGS} -c -o $@ $<

## Clear Module
clean:
	rm -f ${OBJS} qhttpd
